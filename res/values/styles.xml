<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MediaRemoteButtonTheme">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">@dimen/media_remote_button_size</item>
        <item name="android:layout_width">@dimen/media_remote_button_size</item>
    </style>

    <style name="MediaRemoteRippleEffectTheme">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">@color/media_remote_ripple_effect_color</item>
    </style>

    <style name="TextAppearance.ToolbarButton" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/chip_text_color_secondary</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="Theme.Banana.Fullscreen.Transparent.Dialog" parent="Base.Theme.Chromium.Fullscreen">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/open_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/close_to_bottom</item>
    </style>
</resources>
